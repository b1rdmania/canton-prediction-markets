<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Chat - Am Predicts MVP</title>
    <link href="https://fonts.googleapis.com/css2?family=Cousine:wght@400;700&family=IBM+Plex+Mono:wght@400;500&family=Noto+Sans:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/chat-widget.css">
    <style>
        :root {
            --off-white: #F7F7F7;
            --near-black: #1B1C1C;
            --light-gray: #E8E8E8;
            --medium-gray: #6B6B6B;
            --white: #FFFFFF;
            /* LV Multicolor Palette */
            --lv-pink: #E8A4C9;
            --lv-red: #D94444;
            --lv-purple: #9B6BB8;
            --lv-blue: #5B8FD4;
            --lv-green: #6AB86A;
            --lv-yellow: #D4A44A;
            --lv-teal: #4AB8B8;
            --lv-coral: #E8846B;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Noto Sans', sans-serif;
            background-color: var(--off-white);
            color: var(--near-black);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        /* Navigation */
        .nav {
            position: sticky;
            top: 0;
            z-index: 1000;
            background: var(--off-white);
            border: 1px solid var(--near-black);
            padding: 0 24px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 64px;
        }

        .nav-logo {
            font-family: 'Noto Sans', sans-serif;
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--near-black);
            text-decoration: none;
            letter-spacing: -0.02em;
        }

        .nav-links {
            display: flex;
            align-items: center;
            gap: 32px;
        }

        .nav-link {
            font-family: 'Cousine', monospace;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: var(--near-black);
            text-decoration: none;
            transition: opacity 0.2s;
        }

        .nav-link:hover {
            opacity: 0.6;
        }

        .nav-link.active {
            border-bottom: 2px solid var(--lv-purple);
            padding-bottom: 4px;
        }

        .nav-cta {
            font-family: 'Cousine', monospace;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            background: var(--lv-pink);
            color: var(--near-black);
            border: 1px solid var(--near-black);
            padding: 12px 24px;
            text-decoration: none;
            transition: all 0.2s;
        }

        .nav-cta:hover {
            background: var(--near-black);
            color: var(--white);
        }

        /* Page Container */
        .page-container {
            flex: 1;
            display: flex;
            flex-direction: column;
            max-width: 1400px;
            width: 100%;
            margin: 0 auto;
            padding: 48px;
        }

        .page-header {
            text-align: center;
            margin-bottom: 48px;
        }

        .page-title {
            font-family: 'Noto Sans', sans-serif;
            font-size: clamp(36px, 5vw, 56px);
            font-weight: 400;
            text-transform: uppercase;
            line-height: 1.1;
            margin-bottom: 16px;
        }

        .page-subtitle {
            font-family: 'Cousine', monospace;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            color: var(--medium-gray);
        }

        /* Chat Container - Full Page Version */
        .chat-full-container {
            flex: 1;
            display: flex;
            flex-direction: column;
            background: var(--white);
            border: 2px solid var(--near-black);
            max-height: calc(100vh - 280px);
            min-height: 600px;
        }

        .chat-full-header {
            background: var(--near-black);
            color: var(--white);
            padding: 24px 32px;
            border-bottom: 2px solid var(--near-black);
        }

        .chat-full-header h2 {
            font-family: 'Cousine', monospace;
            font-size: 16px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            margin-bottom: 8px;
        }

        .chat-full-status {
            display: flex;
            align-items: center;
            gap: 8px;
            font-family: 'Cousine', monospace;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: var(--lv-green);
        }

        .status-dot-small {
            width: 8px;
            height: 8px;
            background: var(--lv-green);
            border-radius: 50%;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }

        .chat-full-body {
            flex: 1;
            overflow-y: auto;
            padding: 32px;
            background: var(--off-white);
        }

        .chat-full-footer {
            border-top: 2px solid var(--light-gray);
            background: var(--white);
            padding: 24px 32px;
        }

        /* Reuse chat-widget styles for messages */
        /* Footer */
        footer {
            border-top: 1px solid var(--near-black);
            padding: 32px;
            text-align: center;
            margin-top: auto;
        }

        footer p {
            font-family: 'Cousine', monospace;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: var(--medium-gray);
        }

        /* Responsive */
        @media (max-width: 768px) {
            .nav-links {
                display: none;
            }

            .page-container {
                padding: 24px;
            }

            .chat-full-container {
                max-height: calc(100vh - 200px);
            }

            .chat-full-body {
                padding: 20px;
            }

            .chat-full-footer {
                padding: 16px 20px;
            }
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="nav">
        <a href="index.html" class="nav-logo">am predicts</a>
        <div class="nav-links">
            <a href="index.html#markets" class="nav-link">Markets</a>
            <a href="ai-insights.html" class="nav-link active">AI Chat</a>
            <a href="research.html" class="nav-link">Research</a>
            <a href="index.html#predictions" class="nav-link">My Predictions</a>
            <a href="about.html" class="nav-link">About</a>
            <a href="index.html#markets" class="nav-cta">Browse Markets</a>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="page-container">
        <div class="page-header">
            <h1 class="page-title">AI ASSISTANT</h1>
            <p class="page-subtitle">Ask me anything about prediction markets</p>
        </div>

        <!-- Full Page Chat Interface -->
        <div class="chat-full-container">
            <div class="chat-full-header">
                <h2>Market Analysis & Questions</h2>
                <div class="chat-full-status">
                    <div class="status-dot-small"></div>
                    <span>AI Online</span>
                </div>
            </div>

            <div class="chat-full-body" id="chatFullMessages">
                <div class="chat-welcome">
                    <div class="welcome-icon">✨</div>
                    <h4>Ask me anything about prediction markets</h4>
                    <div class="suggested-questions">
                        <button class="suggested-q" data-question="What are the best markets right now?">
                            What are the best markets right now?
                        </button>
                        <button class="suggested-q" data-question="How does quality scoring work?">
                            How does quality scoring work?
                        </button>
                        <button class="suggested-q" data-question="Show me high volume markets">
                            Show me high volume markets
                        </button>
                        <button class="suggested-q" data-question="What are prediction markets?">
                            What are prediction markets?
                        </button>
                        <button class="suggested-q" data-question="Explain the trading models">
                            Explain the trading models
                        </button>
                        <button class="suggested-q" data-question="How accurate are prediction markets?">
                            How accurate are prediction markets?
                        </button>
                    </div>
                </div>
            </div>

            <div class="chat-full-footer">
                <form id="chatFullForm" class="chat-input-form">
                    <input
                        type="text"
                        id="chatFullInput"
                        class="chat-input"
                        placeholder="Ask about markets, quality scores, strategies, analysis..."
                        autocomplete="off"
                        style="font-size: 16px;"
                    />
                    <button type="submit" class="chat-send-btn">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="22" y1="2" x2="11" y2="13"></line>
                            <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
                        </svg>
                    </button>
                </form>
                <div class="chat-disclaimer">
                    AI-generated responses may be experimental • Not financial advice
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <p>Am Predicts MVP (Demo v0)</p>
        <p style="margin-top: 8px; color: var(--lv-pink);">Predictions are simulated for UX testing (no on-chain settlement).</p>
        <p style="margin-top: 8px;">Insights may be heuristic/experimental and are not financial advice.</p>
    </footer>

    <script>
        const API_BASE = 'https://postposted-spent-knife-given.trycloudflare.com';
        let messages = [];

        // Handle suggested questions
        const suggestedQuestions = document.querySelectorAll('.suggested-q');
        suggestedQuestions.forEach(btn => {
            btn.addEventListener('click', () => {
                const question = btn.getAttribute('data-question');
                sendMessage(question);
            });
        });

        // Handle form submission
        const form = document.getElementById('chatFullForm');
        form.addEventListener('submit', (e) => {
            e.preventDefault();
            const input = document.getElementById('chatFullInput');
            const message = input.value.trim();
            if (message) {
                sendMessage(message);
                input.value = '';
            }
        });

        async function sendMessage(message) {
            const container = document.getElementById('chatFullMessages');

            // Remove welcome screen
            const welcome = container.querySelector('.chat-welcome');
            if (welcome) {
                welcome.remove();
            }

            // Add user message
            addMessage('user', message);

            // Show typing
            showTyping();

            try {
                const response = await fetch(`${API_BASE}/api/ai/chat`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        message: message,
                        context: {
                            page: 'ai-chat',
                            timestamp: new Date().toISOString()
                        }
                    })
                });

                const data = await response.json();
                hideTyping();

                if (data.error) {
                    throw new Error(data.error);
                }

                addMessage('assistant', data.response, data.markets);

            } catch (error) {
                console.error('Chat error:', error);
                hideTyping();
                addMessage('assistant',
                    "I'm having trouble connecting right now. Please try again or browse the markets directly.",
                    null,
                    true
                );
            }

            // Save history
            localStorage.setItem('am_full_chat_history', JSON.stringify(messages.slice(-20)));
        }

        function addMessage(role, content, markets = null, isError = false) {
            const container = document.getElementById('chatFullMessages');
            const messageEl = document.createElement('div');
            messageEl.className = `chat-message ${role}${isError ? ' error' : ''}`;

            const timestamp = new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });

            let marketsHTML = '';
            if (markets && markets.length > 0) {
                marketsHTML = `
                    <div class="chat-markets">
                        ${markets.map(m => `
                            <div class="chat-market-card" onclick="window.location.href='index.html#market-${m.market_id}'">
                                <div class="chat-market-title">${m.question}</div>
                                <div class="chat-market-stats">
                                    <span>${(parseFloat(m.price || 0.5) * 100).toFixed(0)}%</span>
                                    <span>Quality: ${m.quality?.total_score?.toFixed(0) || 'N/A'}</span>
                                </div>
                            </div>
                        `).join('')}
                    </div>
                `;
            }

            messageEl.innerHTML = `
                <div class="message-content">
                    <div class="message-text">${formatMessage(content)}</div>
                    ${marketsHTML}
                </div>
                <div class="message-time">${timestamp}</div>
            `;

            container.appendChild(messageEl);
            container.scrollTop = container.scrollHeight;

            messages.push({ role, content, markets, timestamp });
        }

        function formatMessage(content) {
            return content
                .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
                .replace(/\*(.*?)\*/g, '<em>$1</em>')
                .replace(/\n/g, '<br>');
        }

        function showTyping() {
            const container = document.getElementById('chatFullMessages');
            const indicator = document.createElement('div');
            indicator.className = 'chat-message assistant typing';
            indicator.id = 'typingIndicatorFull';
            indicator.innerHTML = `
                <div class="message-content">
                    <div class="typing-dots">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                </div>
            `;
            container.appendChild(indicator);
            container.scrollTop = container.scrollHeight;
        }

        function hideTyping() {
            const indicator = document.getElementById('typingIndicatorFull');
            if (indicator) {
                indicator.remove();
            }
        }

        // Load history on page load
        document.addEventListener('DOMContentLoaded', () => {
            try {
                const saved = localStorage.getItem('am_full_chat_history');
                if (saved) {
                    messages = JSON.parse(saved);
                    // Optionally restore to UI
                }
            } catch (e) {
                console.error('Failed to load history:', e);
            }

            // Focus input
            document.getElementById('chatFullInput').focus();
        });
    </script>
</body>
</html>
